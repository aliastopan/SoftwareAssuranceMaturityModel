@page "/administrator"

<h3>Tabel Survey</h3>

<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Sesi Survey</th>
      <th scope="col">Tanggal Mulai</th>
      <th scope="col">Tanggal Selesai</th>
      <th scope="col">Status</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    @for (int i = 0; i < SessionManager.Sessions.Count; i++)
    {
    	<tr>
      		<th scope="row">@i</th>
      		<td>@SessionManager.Sessions[i].Name</td>
      		<td>@SessionManager.Sessions[i].StartDate</td>
      		<td>@SessionManager.Sessions[i].EndDate</td>
      		<td>@SessionManager.Sessions[i].Flag.ToString()</td>
      		<td>
				@if(SessionManager.IsSessionOnGoing(i))
				{
          			<button class="btn btn-sm btn-info" disabled>Lihat Hasil</button>
				}
				else
				{
					var direct = $"/recap/{i}";
          			<a href="@direct" class="btn btn-sm btn-info">Lihat Hasil</a>
				}
      		</td>
    	</tr>
    }
  </tbody>
</table>

<br><br>

<SessionForm />
