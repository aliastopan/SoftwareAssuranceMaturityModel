@page "/survey"

<div class="questionnaire">
    <div class="question shadow p-3 mb-5 bg-white rounded">

        <h4>Kategori: @QManager.CurrentQuestionnaire!.Domain</h4>
        <span>
            @QManager.CurrentQuestionnaire.Statement
        </span>
        <div class="py-3"></div>

        @for (int i = 0; i < QManager.CurrentQuestionnaire.Responds.Count; i++)
        {
            int choiceValue = i+1;
            string choiceName = $"choice{i}";
            <div class="option">
                <span class="px-2">
                    <input type="radio" name="survey" @onchange="RadioSelection" value="@choiceValue">
                </span>
                <span>@QManager.CurrentQuestionnaire.Responds[i]</span>
            </div>
        }
    </div>

    <div class="pagination">
        <button class="btn btn-sm btn-dark" @onclick="@Prev">Prev</button>
        <div class="px-3">
            <span>@_currentPage</span><span>/</span><span>@_maxPage</span>
        </div>
        <button class="btn btn-sm btn-dark" @onclick="@Next">Next</button>
    </div>
</div>
