@page "/survey"


  <EditForm Model="SurveyManager">
    <InputRadioGroup @bind-Value="SurveyManager.CurrentRespond.Value">
        @for (int i = 0; i < 3; i++)
        {
            int choice = i+1;
            <InputRadio @onclick="@_Debug" Value="@choice" /> @SurveyManager.CurrentQuestionnaire.Responds[i]
            <br>
        }
    </InputRadioGroup>
  </EditForm>



@code{
    void _Debug()
    {
        System.Console.WriteLine($": {SurveyManager.Responds[0].Value}");
    }
}



