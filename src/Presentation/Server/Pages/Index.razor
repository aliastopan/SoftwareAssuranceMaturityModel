@page "/"
@using SoftwareAssuranceMaturityModel.Application.Common.Managers
@using SoftwareAssuranceMaturityModel.Application.Common.Helpers
@inject QuestionnaireManager QManager

<PageTitle>Index</PageTitle>

<h1>Hello, world!</h1>

Welcome to your new app.

<AuthorizeView>
    <Authorized>
        <span class="py-1">Hi, @context.User.Identity!.Name</span>
    </Authorized>
    <NotAuthorized>
        <br>
        <span class="py-1">Who are you?</span>
    </NotAuthorized>
</AuthorizeView>

@code {
    protected override void OnAfterRender(bool firstRender)
    {
        if(firstRender)
        {
            var result = QManager.TryGetQuestionnaires();
            if(result.Success)
            {
                System.Console.WriteLine($"Result: {result.Value.Count}");
            }
        }
    }
}